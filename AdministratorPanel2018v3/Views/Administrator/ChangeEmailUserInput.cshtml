@model AdministratorPanel2018v3.Models.Account
@{
    ViewBag.Title = "Change User Email";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/style.css" rel="stylesheet">




<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center"> Change Email</h1>
            </div>
        </div>
    </div>
</header>



<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                @using (Html.BeginForm("ChangeEmailUserInput", "Administrator", FormMethod.Post))
    {
            @Html.AntiForgeryToken()
                


            <div class="form-group">

                <div class="col-md-12">

                    @Html.Label("Enter New Email")
                    @Html.TextBox("txtEmail")
                </div>
            </div>
            <br />
            <br />
            



            <div class="form-group">
                <div class="col-md-offset-5 col-md-12">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
}
            </div>
            </div>
        </div>
    </section>
              