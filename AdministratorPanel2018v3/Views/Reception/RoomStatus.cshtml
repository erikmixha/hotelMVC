@model AdministratorPanel2018v3.Models.Room
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/style.css" rel="stylesheet">



<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center"> Change Room Status</h1>
            </div>
        </div>
    </div>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.RoomID)
        @Html.HiddenFor(model => model.FacilityID)
        @Html.HiddenFor(model => model.RoomDescription)
        @Html.HiddenFor(model => model.Price)
        @Html.HiddenFor(model => model.Floor)
        @Html.HiddenFor(model => model.Size)



        <div class="form-group ">
            <div class="col-md-10 col-lg-offset-4 ">


                @Html.LabelFor(model => model.RoomStatus, "Room Status", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.DropDownListFor(modelItem => modelItem.RoomStatus, new[] {new SelectListItem() {Text = "Available",Value ="Available"},
new SelectListItem() {Text = "Occupied",Value ="Occupied"}}, "Choose an option")
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Change" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <div class="col-md-offset-6 col-md-10">

        @Html.ActionLink("Back to Panel", "Index")
    </div>
</div>
